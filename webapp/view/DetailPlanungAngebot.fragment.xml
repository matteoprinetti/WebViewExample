<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title="Artikel im Angebot" stretch="true">
		<VBox>
			<Label text="Artikeldata" class="sapUiResponsiveMargin"/>
			<Table id="DetailTab"/>
			<IconTabBar id="DetailTabBar" expanded="true" expandable="false">
				<items>
					<IconTabFilter   text="Angebot" key="Grob" enabled="tue">
							<Table id="DetailTabAngebot"/>
					</IconTabFilter>
					<IconTabSeparator icon="sap-icon://open-command-field"/>
					<IconTabFilter   text="Zusatz" key="Detail" enabled="true">
							<Table id="DetailTabZusatz"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</VBox>
		<endButton>
			<Button text="Close"/> 
		</endButton>
	</Dialog>
</core:FragmentDefinition>