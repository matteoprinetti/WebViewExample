<mvc:View controllerName="zpoly.zpolyplanung.controller.Master" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml"
	displayBlock="true" xmlns="sap.m" xmlns:semantic="sap.m.semantic" xmlns:ism="zism.zismlibrary.controls" xmlns:suite="sap.suite.ui.commons" xmlns:core="sap.ui.core">
	<Page id="masterPage" showFooter="true" title="{i18n>appTitle}">
		<content>
			<IconTabBar id="idIconTabBar"   class="sapUiResponsiveContentPadding" expanded="true" expandable="false" select="onTabbarSelect">
				<items>
					<IconTabFilter text="Übersicht" key="Ueber" >
						<FlexBox direction="Row" alignItems="Center" class="sapUiResponsiveMargin">
							<items>
								<Label text="{i18n>FilialenAuswahl}" labelFor="filialeInput" class="sapUiSmallMargin"/>
								<ism:FilialeChooser id="filialeInput" onFilialeSelected="onFilialeSelected"/>
								<Text id="filialeInputDescr" text="{local>/FilialeDescr}" class="sapUiSmallMargin"/>
								<Label text="{i18n>Kalenderwoche}" labelFor="calenderAuswahl" class="sapUiSmallMargin"/>
								<DatePicker id="calenderAuswahl" placeholder="{i18n>Kalenderwoche}" displayFormat="w.YYYY" valueFormat="wwYYYY" class="sapUiSmallMargin"
								   value="{local>/CalWeek}" change="onCalWeekChange" />
							</items>
						</FlexBox>
						<Table id="flTable" inset="false" 
							delete="onStellplatzDelete">
							<headerToolbar>
								<OverflowToolbar>
 										<Title text="Promo und Polyflächen" level="H1"/>
								</OverflowToolbar>
							</headerToolbar>
							<columns>
								<Column width="16em" visible="false">
									<Text text="Id" />
								</Column>
								<Column width="16em">
									<Text text="Bezeichnung"/>
								</Column>
								<Column width="16em">
									<Text text="Typ"/>
								</Column>
								<Column width="16em">
									<Text text="Sortimentsbereich / Direktion"/>
								</Column>
									<Column width="16em">
									<Text text="Belegung"/>
								</Column>
							</columns>
						
						</Table>
					</IconTabFilter>
					<IconTabSeparator icon="sap-icon://open-command-field"/>
					<IconTabFilter id="Detail" text="Grobplanung" key="Grob" enabled="false">
						<core:Fragment fragmentName= "zpoly.zpolyplanung.view.GrobPlanung" type="XML"/>
						</IconTabFilter>
					<IconTabSeparator icon="sap-icon://open-command-field"/>
					<IconTabFilter id="tabDetail" text="Detailplanung" key="Detail" enabled="false" >
						<core:Fragment fragmentName= "zpoly.zpolyplanung.view.DetailPlanung" type="XML"/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer>
			<Bar id="masterToolbar">
				<contentRight>
					<Button id="printBtn" icon="sap-icon://excel-attachment" text="Excel download" press="onBtnExcel"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>