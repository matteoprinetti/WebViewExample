<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="angebotPopover"
		title="{Offers>OfrName}"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="VerticalPreferredBottom"
		verticalScrolling="false"
		initialFocus="email">
		<VBox>
		<Text text="Status: {Offers>Duration}" class="sapUiSmallMargin" />
 		<Text text="Start: { path: 'Offers>Startdat',   formatter: '.formatter.getDateAsWeekMigrosRule'}" class="sapUiSmallMargin"/>
 		<Text text="End: { path: 'Offers>Enddat',   formatter: '.formatter.getDateAsWeekMigrosRule'}" class="sapUiSmallMargin"/>
 		</VBox>
	</Popover>
</core:FragmentDefinition>
